{
  "hosting": {
    "public": "webapp/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/*",
        "function": "lookUpHash"
      },
      {
        "source": "/api/shorten-url",
        "function": "shortenUrl"
      },
      {
        "source": "/api/count",
        "function": "shortenUrl"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/404.html",
        "destination": "/404.html",
        "type": 404
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  }
}
